{
  "compilerOptions": {
    "outDir": "./built/",
    "sourceMap": true,
    "strict": true,
    "lib": ["es6", "dom","es2015"],
    "noImplicitReturns": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "strictFunctionTypes": false,
    "experimentalDecorators": true
  },
  "baseUrl": "src",
  // This must be specified if "paths" is.
  "paths": {
    "@/*": [
      "src/*"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}